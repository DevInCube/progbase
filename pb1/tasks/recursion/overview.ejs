Приклад (обчислити суму всіх десяткових цифр у строці):
~~~~c
#include <stdlib.h>
#include <stdio.h>
#include <ctype.h>
#include <string.h>

int digitsSum(const char * str);

int main(void) {
	char str[100];
	int sum = 0;
	printf("PLease, enter a string: ");
	fgets(str, 100, stdin);
	str[strlen(str) - 1] = '\0';
	printf("You've entered: %s\n", str);

	/* call recursive function and print it's result*/
	sum = digitsSum(str);
	printf("\nTask: get sum of all digits in string: %i\n\n", sum);

	return EXIT_SUCCESS;
}

int digitsSum(const char * str) {
	char firstChar = str[0];
	if (firstChar == '\0') {
		return 0;
	} else if (!isdigit(firstChar)) {
		return digitsSum(str + 1);
	} else {
		int digitValue = firstChar - '0';
		return digitValue + digitsSum(str + 1);
	}
}
